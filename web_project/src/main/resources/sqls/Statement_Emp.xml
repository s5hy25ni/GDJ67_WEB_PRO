<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hr.pro.model.AdminDaoImpl">
	
	<select id="admin_select" resultType="AdminDTO">
		SELECT ADMIN_ID, ADMIN_PW
			FROM ADMINS
	</select>
	<sql id="selectAll">
		SELECT EMPLOYEE_ID, FIRST_NAME, LAST_NAME, EMAIL, PHONE_NUMBER, TO_CHAR(HIRE_DATE, 'YYYY-MM-DD') AS HIRE_DATE, e.JOB_ID, SALARY, e.MANAGER_ID, e.DEPARTMENT_ID, DEPARTMENT_NAME, JOB_TITLE
			FROM (EMP e JOIN DEPT d
			ON e.DEPARTMENT_ID = d.DEPARTMENT_ID) JOIN JOB2 j
			ON e.JOB_ID = j.JOB_ID
	</sql>
	
	<!-- 전체조회 WP001 -->
	<select id="emp_selectAll" resultType="EmpDTO">
		<include refid="selectAll"/>
	</select>
	
	<!--ID 또는 이름 검색 WP002  -->
	<select id="emp_search" parameterType="String" resultType="EmpDTO">
		<include refid="selectAll"/>
		WHERE LOWER(FIRST_NAME ||' '|| LAST_NAME) LIKE LOWER('%'||#{name}||'%')
	</select>
	
	<!-- department_id로 검색 -->
	<select id="emp_deptId_select" resultType="EmpDTO">
		<include refid="selectAll"/>
		WHERE DEPARTMENT_ID = #{department_id}
	</select>
	
	<!-- job_id로 검색 -->
	<select id="emp_jobId_select" resultType="EmpDTO">
		<include refid="selectAll"/>
		WHERE job_id = #{job_id}
	</select>
</mapper>
